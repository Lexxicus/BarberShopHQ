<h2>На этой странице вы сможете записаться к нам в Barber Shop</h2>

<script type="text/javascript">
    $(function () {
        $('#color').simplecolorpicker();
        $('#datetimepicker').datetimepicker({
            format:'d.m.Y H:i',
            lang:'ru'
        });
    });
</script>

<% if @congrat && @congrat.length > 1 %>
    <%= @congrat %>
<% end %>

<form action="/visit" name="client" method="POST" role="form">

  <label>Выберите Брадобрея:</label>
  <select size="1" class="form-control" value = "<% @barber %>" name="barber">
    <% @barbers.each do |barber| %>
        <option <%= @barber == barber.name ? 'selected' : '' %>><%= barber.name %></option>
    <% end %>
  </select>
  <div class="form-group">
    <label>Ваше имя</label>
    <input name="name" type="text" class="form-control" value="<%= @name %>" placeholder="Ваше имя">
  </div>

  <div class="form-group">
    <label>Ваш телефон</label>
    <input name="phone" type="text" class="form-control" value="<%= @phone %>" placeholder="Ваш телефон">
  </div>

  <div class="form-group">
    <label>Когда вас ждать?</label>
    <input id="datetimepicker" name="datestamp" type="text" class="form-control" value="<%= @datestamp %>" placeholder="Введите дату и время">
  </div>

  <div class="form-group">
    <label>Выбери свой цвет бороды: </label>
    <select id="color" name="color">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>

  <button type="submit" class="btn btn-danger">Записаться</button>

</form>
